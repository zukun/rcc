      Areal epsilon = 1.;  // /.0001
      //Areal epsilon = 0.000001; // DOES MAKE A DIFFERENCE!
      int steps = 10000;
      Areal error = PrecConjGrad(numVariables(), this, &sweeper, _x,_b,epsilon,&steps, _fp);
      //buildInitial(c, newLabels);

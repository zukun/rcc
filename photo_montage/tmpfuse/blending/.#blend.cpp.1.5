    //vector<int> crap;
    //HB_OneCurve sweeper(_w,_h,crap,0);
    HB_Precond sweeper(_w, _h);
    for (int c=0; c<3; ++c) { // iterate over color channels
   
      if (reInit)
	buildInitial(c, newLabels);
      else
	modifyInitial(c, newLabels);
        
      // do compute here

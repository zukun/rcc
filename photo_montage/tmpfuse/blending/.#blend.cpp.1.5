  void channelDecompose(int w, int h, unsigned char *img, unsigned char *r, unsigned char *g, unsigned char *b) {
    int n = w * h;
    for (int i = 0 ; i < n ; i++) {
      r[i] = img[3 * i + 0];
      g[i] = img[3 * i + 1];
      b[i] = img[3 * i + 2];
    }
  }

